{
  "compilerOptions": {
    "paths": {
          "./lib/*": ["./lib/*"]
        },
    "rewriteRelativeImportExtensions": true,
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./*"],
  "exclude": ["./tests", "./jest.config.ts"]
}
